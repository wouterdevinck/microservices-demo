{
  "name": "task-frontend",
  "version": "0.0.0",
  "description": "Task Frontend",
  "scripts": {
    "start": "webpack-dev-server --inline --host 0.0.0.0 --port 4300 --config webpack.config.dev.js",
    "build": "npm run clean && ngc -p tsconfig.json && webpack --progress --profile --bail --config webpack.config.js && npm run clean:tmp",
    "serve": "http-server ./dist -p 4300",
    "clean": "rimraf dist && npm run clean:tmp",
    "clean:tmp": "rimraf src/*.ngsummary.json && rimraf src/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wouterdevinck/microservices-demo"
  },
  "author": "Wouter Devinck",
  "license": "Apache-2.0",
  "devDependencies": {
    "@angular/common": "5.0.0",
    "@angular/compiler": "5.0.0",
    "@angular/compiler-cli": "5.0.0",
    "@angular/core": "5.0.0",
    "@angular/forms": "5.0.0",
    "@angular/platform-browser": "5.0.0",
    "@angular/platform-browser-dynamic": "5.0.0",
    "@types/node": "^9.4.0",
    "angular-router-loader": "^0.8.2",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.4.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^2.30.1",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "rxjs": "^5.5.6",
    "typescript": "2.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1",
    "zone.js": "^0.8.20"
  },
  "dependencies": {
    "http-server": "^0.11.1"
  }
}
